<!-- views/pages/contact.ejs -->
<section class="py-5 bg-light">
    <div class="container">
      <h1 class="display-4 text-center mb-4">Contact Us</h1>
      <div class="row">
        <div class="col-lg-6 mb-4 mb-lg-0">
          <div class="card shadow h-100">
            <div class="card-body p-4">
              <h2 class="h3 mb-4">Send Us a Message</h2>
              <form action="/contact" method="POST">
                <div class="mb-3">
                  <label for="name" class="form-label">Your Name</label>
                  <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email Address</label>
                  <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="mb-3">
                  <label for="subject" class="form-label">Subject</label>
                  <select class="form-select" id="subject" name="subject">
                    <option value="General Inquiry">General Inquiry</option>
                    <option value="Artist Support">Artist Support</option>
                    <option value="Technical Issues">Technical Issues</option>
                    <option value="Partnership Opportunities">Partnership Opportunities</option>
                    <option value="Other">Other</option>
                  </select>
                </div>
                <div class="mb-3">
                  <label for="message" class="form-label">Your Message</label>
                  <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Send Message</button>
              </form>
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="card shadow h-100">
            <div class="card-body p-4">
              <h2 class="h3 mb-4">Contact Information</h2>
              <div class="d-flex mb-4">
                <div class="flex-shrink-0 text-primary">
                  <i class="fas fa-map-marker-alt fa-2x me-3"></i>
                </div>
                <div>
                  <h3 class="h5">Address</h3>
                  <p>123 Art Avenue<br>San Francisco, CA 94103<br>United States</p>
                </div>
              </div>
              <div class="d-flex mb-4">
                <div class="flex-shrink-0 text-primary">
                  <i class="fas fa-envelope fa-2x me-3"></i>
                </div>
                <div>
                  <h3 class="h5">Email</h3>
                  <p><a href="mailto:contact@virtualartgallery.com">contact@virtualartgallery.com</a></p>
                </div>
              </div>
              <div class="d-flex mb-4">
                <div class="flex-shrink-0 text-primary">
                  <i class="fas fa-phone fa-2x me-3"></i>
                </div>
                <div>
                  <h3 class="h5">Phone</h3>
                  <p>(123) 456-7890</p>
                </div>
              </div>
              <div class="d-flex">
                <div class="flex-shrink-0 text-primary">
                  <i class="fas fa-clock fa-2x me-3"></i>
                </div>
                <div>
                  <h3 class="h5">Hours</h3>
                  <p>Monday - Friday: 9:00 AM - 5:00 PM<br>Saturday: 10:00 AM - 4:00 PM<br>Sunday: Closed</p>
                </div>
              </div>
              <hr class="my-4">
              <h3 class="h5 mb-3">Follow Us</h3>
              <div class="d-flex">
                <a href="#" class="me-3 text-primary"><i class="fab fa-facebook-square fa-2x"></i></a>
                <a href="#" class="me-3 text-primary"><i class="fab fa-twitter-square fa-2x"></i></a>
                <a href="#" class="me-3 text-primary"><i class="fab fa-instagram-square fa-2x"></i></a>
                <a href="#" class="text-primary"><i class="fab fa-pinterest-square fa-2x"></i></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>